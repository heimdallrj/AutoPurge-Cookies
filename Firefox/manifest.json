{
  "manifest_version": 2,
  "name": "AutoPurge-Cookies",
  "version": "1.0.0",
  "description": "AutoPurge Cookies â€” Purges cookies except for whitelisted domains when closing the window",
  "permissions": ["cookies", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "screens/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "96": "assets/icon96.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "96": "assets/icon96.png",
    "128": "assets/icon128.png"
  }
}
