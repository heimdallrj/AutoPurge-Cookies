{
  "manifest_version": 2,
  "name": "AutoPurge-Cookies",
  "version": "1.0.0",
  "description": "AutoPurge Cookies â€” Purges cookies except for whitelisted domains when closing the window",
  "permissions": [
    "cookies",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "screens/popup.html",
    "default_icon": {
      "48": "assets/icon-48.png",
      "96": "assets/icon-96.png"
    }
  },
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  }
} 
