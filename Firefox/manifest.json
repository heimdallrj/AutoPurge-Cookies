{
  "manifest_version": 2,
  "name": "AutoPurge-Cookies",
  "version": "1.0.0",
  "description": "AutoPurge Cookies â€” Lightweight & privacy-focused.",
  "permissions": [
    "cookies",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.jpg",
      "96": "icons/icon-96.jpg"
    }
  },
  "icons": {
    "48": "icons/icon-48.jpg",
    "96": "icons/icon-96.jpg"
  }
} 
