{
  "manifest_version": 2,
  "name": "AutoPurge-Cookies-Local",
  "version": "1.0.0",
  "description": "Automatically delete cookies from untrusted sites to protect your privacy and prevent tracking.",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "screens/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "96": "assets/icon96.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "96": "assets/icon96.png",
    "128": "assets/icon128.png"
  }
}